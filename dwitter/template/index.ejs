<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dwitter</title>
  </head>
  <body>
    <!-- header -->
    <h1>Dwitter</h1>
    <ul>
      <li><a href="/dwitter">All Dwitter</a></li>
      <li><a href="#">My Dwitter</a></li>
      <li><a href="#">Login</a></li>
    </ul>

    <!-- post ÏûÖÎ†• form  -->
    <form action="/dwitter" name="contentForm" method="post" style="border: 2px solid aliceblue">
      <input type="text" name="id" placeholder="id" />
      <input type="text" name="name" placeholder="name" />
      <input type="text" name="content" style="width: 70%" />
      <button type="submit">Post</button>
    </form>

    <!-- tweet list -->
    <% for(i=0; i<list.length; i++){ %>
    <div style="border: 1px solid gray; margin-top: 10px; width: 50%">
      <span style="float: right; cursor: pointer" onclick="remove('<%= list[i].id %>')">ùóë&nbsp;</span>
      <span style="float: right; cursor: pointer" onclick="updateToggle('<%= list[i].id  %>')">‚úé&nbsp;</span>
      <img
        style="clear: both"
        src="https://lh3.google.com/u/0/ogw/AKPQZvz2HmNjcwAEPNQlku9rD9iZkhoLuN9oOZVOKW5U=s64-c-mo"
      />
      <span>[<%= list[i].name %>]</span>
      <span><a href="/dwitter/<%= list[i].id %>">@<%= list[i].id %></a></span>
      <span><%= list[i].date %></span>
      <div><%= list[i].content %></div>

      <div id="updateForm_<%= list[i].id %>" style="display: none">
        <input type="text" id="content_<%= list[i].id %>" style="width: 80%" />
        <button type="button" onclick="update('<%= list[i].id %>')">Update</button>
      </div>
    </div>
    <% } %>

    <script>
      // remove delete
      function remove(id) {
        fetch('/dwitter', {
          method: 'delete',
          headers: { 'content-type': 'application/json' },
          body: JSON.stringify({ id: id }),
        })
          .then(result => {
            if (result.status === 204) {
              alert('ÏÇ≠Ï†ú ÏÑ±Í≥µ ‚úåüèª');
              window.location.reload();
            }
          })
          .catch(console.error);
      }
      /*       function remove(pid) {
        fetch('/dwitter', {
