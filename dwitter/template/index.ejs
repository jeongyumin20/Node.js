          body: JSON.stringify({ pid: pid }),
        })
          .then(result => {
            if (result.status === 204) {
              alert('ì‚­ì œ ì„±ê³µ ğŸ—‘');
              window.location.reload();
            }
          })
          .catch(console.error);
      } */

      // update
      function update(id) {
        const updateText = document.querySelector('#content_' + id).value;
        fetch('/dwitter', {
          method: 'put',
          headers: { 'content-type': 'application/json' },
          body: JSON.stringify({ id: id, content: updateText }),
        })
          .then(result => {
            if (result.status === 204) {
              alert('ì—…ë°ì´íŠ¸ ì„±ê³µ âœŒğŸ»');
              window.location.reload();
            } else if (result.status === 400) {
              alert('ë¡œê·¸ì¸ í›„ ìˆ˜ì •ì´ ê°€ëŠ¥í•©ë‹ˆë‹¤');
            }
          })
          .catch(console.error)
          .finally();
      }

      // update toggle
      function updateToggle(pid) {
        const updateForm = document.querySelector('#updateForm_' + pid);
        const contentText = document.querySelector('#content_' + pid);

        const display = updateForm.style.display;
        if (display === 'none') {
          updateForm.style.display = 'block';
          contentText.focus();
        } else {
          updateForm.style.display = 'none';
          contentText.value = '';
        }
      }
    </script>
  </body>
</html>
